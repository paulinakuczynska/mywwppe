{% extends "base.html.jinja" %}

{% block description %}
    <h2>Set margins for placeholders</h2>
    <p>
        To change the default margin setting, which is 0.25 cm on the left and right
        and 0.13 cm on the top and bottom, enter the desired values below.
        Without entering any value, the margins will be set to zero.
    </p>
{% endblock %}

{% block content %}
    <form action="" method="post" enctype=multipart/form-data novalidate>
        {{ form.hidden_tag() }}
        <p>
            {{ form.upload() }}
        </p>
        <p>
            {{ form.left() }}
            {% for error in form.left.errors %}
                <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        </p>
                <p>
            {{ form.right() }}
            {% for error in form.right.errors %}
                <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        </p>
                <p>
            {{ form.top() }}
            {% for error in form.top.errors %}
                <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        </p>
                <p>
            {{ form.bottom() }}
            {% for error in form.bottom.errors %}
                <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        </p>
        <p>
            {{ form.submit() }}
        </p>
    </form>
{% endblock %}